<h1><b>Your Fridge Analytics</h1></b>
<br>
<h2>Items Expiring Most Often</h2>

<div class="row">
<div class="col-lg-6">
<h3> Meals </h3>
	<table class="table table-striped table-bordered table-hover">
	  <tr>
	    <th>Name</th>
	    <th>Times Expired</th>
	  </tr>
				<% @meals_expiring_most_often.each do |k, v| %>
		<tr>
	    <td><%= k %></td>
	    <td><%= v %></td>
		</tr>
				<% end %>
	</table>
</div>

<div class="col-lg-6">
<h3> Ingredients </h3>
	<table class="table table-striped table-bordered table-hover">
		 <tr>
		   <th>Name</th>
		   <th>Times Expired</th>
		 </tr>
				<% @ingredients_expiring_most_often.each do |k, v| %>
		<tr>
		   <td><%= k %></td>
		   <td><%= v %></td>
		</tr>
				<% end %>
	</table>
</div>
</div>


